def checkFieldsAroundMines(row, col, board):
t=7 #total mines
a = row
b = column
a=row-1
    if board[row][col] == 1:
        board[row][col] = 'T'
        return True
b=column-1
    if board[row][col] != 1:
       board[row][col] = 'F'
        return False
    a=a+1
    b=b+1
    t=t+[a][b]
